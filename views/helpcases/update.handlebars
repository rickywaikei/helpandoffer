    <h4 class="text-center">Update offered case</h4><br>
<!-- _method with "put" -->
<div class="card card-body"><br>
    <h6>
        <div class="form-group">
            <label for="title">Title</label>
            <input type=text name="title" class="form-control" value="{{helpcase.title}}" readonly />
        </div>
        <div class="form-group">
            <label for="details">Details</label>
            <textarea name="details" class="form-control" readonly>{{helpcase.details}}</textarea>
        </div>
    </h6>
    <hr>
    <h5>Send message to case author</h5>
    <h6>
        <form action="/helpcases/update/{{helpcase._id}}?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT" required />
            <div class="form-group">
                <label for="offermsg">Your message</label>
                <textarea name="offermsg" class="form-control"></textarea>
            </div>
            <label for="offer">Remove your Offerer role? [Enter "REMOVE" to confirm]</label>
            <input type=text name="offer" class="form-control" value="{{helpcase.offer}}" /><br>
            <button type="submit" class="btn text-white text-center">Submit</button>
        </form><br>
        <div class="form-group">
            <label for="offermsg">Previous messages</label>
            <textarea name="offermsg" class="form-control" readonly>{{helpcase.offermsg}}</textarea>
        </div>
    </h6>
</div>
</div>
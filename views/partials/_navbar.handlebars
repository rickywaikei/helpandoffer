          <a href="/users/login" class="nav-link text-right"><i class="fas fa-sign-in-alt"></i> {{t 'nav.login'}}</a>
        </li>
        <li class="nav-item">
          <a href="/users/register" class="nav-link text-right"><i class="fas fa-user-plus"></i> {{t 'nav.register'}}</a>

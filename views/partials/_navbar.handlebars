            <a href="/helpcases" class="dropdown-item text-center">{{t 'cases.myRequestedCases'}}</a>
            <a href="/helpcases/add" class="dropdown-item text-center">{{t 'cases.requestNewCase'}}</a>
            <a href="/helpcases/offered" class="dropdown-item text-center">{{t 'cases.myOfferedCases'}}</a>
            <hr>

<div class="container-fluid px-2">
{{#if success_msg}}
<div class="alert alert-success text-center w-100" role="alert" style="border-radius: 15px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); z-index: 1000;">
  <i class="fas fa-check-circle mr-2"></i>{{success_msg}}
</div>
{{/if}}

{{#if error_msg }}
<div class="alert alert-danger text-center w-100" role="alert" style="border-radius: 15px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); z-index: 1000;">
  <i class="fas fa-exclamation-circle mr-2"></i>{{error_msg}}
</div>
{{/if}}
</div>
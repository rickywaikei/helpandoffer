<style>
  .row {
    margin-top: 20px;
    margin-bottom: 20px;
  }

  .card {
    margin: 0 auto;
    float: none;
    margin-bottom: 10px;
    background-color: rgb(248, 237, 227, 0.8) !important;
    font-size: 20px !important;
    border-radius: 50px 50px 50px 50px;
  }

  .btn {
    background-color: #7D6E83 !important;
    border: 0 !important;
    border-radius: 10px 10px 10px 10px;
  }

  .btn-outline-danger {
    background-color: transparent !important;
    border: 1px solid #dc3545 !important;
    color: #dc3545 !important;
  }

  .btn-outline-danger:hover {
    background-color: #dc3545 !important;
    color: white !important;
  }

  label {
    text-align: left;
    font-size: 12px !important;
    border: 0 !important;
  }
</style>
<!-- Include the responsive table CSS -->
<link rel="stylesheet" href="/css/table-responsive.css">

<div>
  <div class="container">
    <div class="row">
      <div class="col-md-8 mx-auto">
        <br><br>
        <h4 class="text-center">My Profile</h4><br>

        <div class="card border-0">
          <div class="card-body" style="padding: 2rem;">
            <!-- Avatar Display -->
            <div class="row mb-4">
              <div class="col-md-12 text-center">
                {{#if avatar.data}}
                  <div class="position-relative mb-3">
                    <div class="mx-auto" style="max-width: 200px;">
                      <img src="data:image/{{avatar.contentType}}; base64, {{avatar.data}}" class="img-fluid rounded-circle border" style="width: 100%;" />
                    </div>
                  </div>
                {{else}}
                  <div class="alert alert-info">No Avatar uploaded yet</div>
                {{/if}}
              </div>
            </div>

            <!-- Avatar Upload Form -->
            <div class="row mb-4">
              <div class="col-md-12">
                <form action="/users/myprofile/upload-avatar" enctype="multipart/form-data" method="POST" class="text-center">
                  <!-- CSRF token removed for file uploads -->
                  <div class="input-group mx-auto" style="max-width: 400px;">
                    <input class="form-control" type="file" id="avatarUpload" name="avatarUpload" />
                    <button type="submit" class="btn btn-sm text-white">Upload</button>
                  </div>
                  <small class="form-text text-muted mt-1">Select an image file (PNG, JPG, JPEG) to upload as your avatar</small>
                </form>
              </div>
            </div>

            <!-- Avatar Delete Form -->
            {{#if avatar.data}}
            <div class="row mb-4">
              <div class="col-md-12 text-center">
                <form action="/users/myprofile/delete-avatar" method="POST" onsubmit="return confirm('Are you sure you want to delete your avatar?');">
                  <input type="hidden" name="_csrf" value="{{csrfToken}}" />
                  <button type="submit" class="btn btn-sm btn-outline-danger">
                    <i class="fas fa-trash"></i> Delete Avatar
                  </button>
                </form>
              </div>
            </div>
            {{/if}}

            <hr>

            <!-- Profile Update Form -->
            <div class="row">
              <div class="col-md-12">
                <form action="/users/update" method="POST">
                  <input type="hidden" name="_csrf" value="{{csrfToken}}" />
                  <table class="table table-hover table-borderless">
                    <tbody>
                      <tr>
                        <td scope="row">Name</td>
                        <td>
                          <input type="text" class="form-control" name="name" value="{{name}}" readonly />
                        </td>
                      </tr>
                      <tr>
                        <td scope="row">E-mail</td>
                        <td>
                          <input type="text" class="form-control" name="email" value="{{email}}" />
                        </td>
                      </tr>
                      <tr>
                        <td scope="row">Phone</td>
                        <td>
                          <input type="tel" class="form-control" name="phone" value="{{phone}}" placeholder="+852 9876-4321" />
                          <small class="form-text text-muted">Hong Kong format: +852 9876-4321 or 98764321</small>
                        </td>
                      </tr>
                      <tr>
                        <td scope="row">Role</td>
                        <td>{{#if isAdmin}} admin {{else}} user {{/if}}</td>
                      </tr>
                      <tr>
                        <td scope="row">Change Password</td>
                        <td>
                          <input type="password" class="form-control" name="password" autocomplete="off" />
                          <small class="form-text text-muted">Leave blank to keep current password</small>
                        </td>
                      </tr>
                      <tr>
                        <td scope="row">Confirm Password</td>
                        <td>
                          <input type="password" class="form-control" name="password2" autocomplete="off" />
                        </td>
                      </tr>
                      <tr>
                        <td scope="row">Received badges</td>
                        <td class="align-middle"><span class="badge bg-warning text-dark">{{badge}}</span></td>
                      </tr>
                    </tbody>
                  </table>

                  <div class="text-center mt-4">
                    <button type="submit" class="btn text-white text-center">Save Profile</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
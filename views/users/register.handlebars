<div class="page-header">
  <h1>{{__ 'auth.register'}}</h1>
  <p class="lead">{{__ 'auth.createAccount'}}</p>
</div>

<div class="row">
  <div class="col-md-6 mx-auto">
    <div class="modern-form">
      <form action="/users/register" method="post">
        <input type="hidden" name="_csrf" value="{{csrfToken}}" />

        <div class="form-group">
          <label for="name">{{__ 'auth.name'}}</label>
          <input type="text" class="form-control" name="name" value="{{name}}" autocomplete="off" required />
        </div>

        <div class="form-group">
          <label for="email">{{__ 'auth.email'}}</label>
          <input type="email" class="form-control" name="email" value="{{email}}" autocomplete="off" required />
        </div>

        <div class="form-group">
          <label for="phone">{{__ 'auth.phone'}}</label>
          <input type="tel" class="form-control" name="phone" value="{{phone}}" placeholder="+123 456-7890" />
          <small class="form-text text-muted">{{__ 'auth.phoneFormat'}}</small>
        </div>

        <div class="form-group">
          <label for="password">{{__ 'auth.password'}}</label>
          <input type="password" class="form-control" name="password" value="{{password}}" required />
        </div>

        <div class="form-group">
          <label for="password2">{{__ 'auth.confirmPassword'}}</label>
          <input type="password" class="form-control" name="password2" value="{{password2}}" required />
        </div>

        <div class="text-center mt-4">
          <button type="submit" class="btn">{{__ 'auth.registerButton'}}</button>
        </div>

        <div class="text-center mt-4">
          <a href="/users/login" class="text-decoration-none">
            <i class="fas fa-sign-in-alt mr-1"></i> {{__ 'auth.haveAccount'}}
          </a>
        </div>
      </form>
    </div>
  </div>
</div>

{{> _version}}
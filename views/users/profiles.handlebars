<style>
  .row {
    margin-top: 20px;
    margin-bottom: 20px;
    text-indent: 2em;
  }

  .card {
    margin: 0 auto;
    float: none;
    margin-bottom: 10px;
    background-color: rgb(223, 211, 195, 0.5) !important;
    font-size: 20px !important;
    border-radius: 50px 50px 50px 50px;
  }

  /* Body background is now handled by global.css */

  .btn {
    background-color: #7D6E83 !important;
    border: 0 !important;
    border-radius: 10px 10px 10px 10px;
  }

  .btn1 {
    background-color: rgb(248, 237, 227, 0.6) !important;
    border: 0 !important;
    border-radius: 10px 10px 10px 10px;
  }

  /* Mobile-specific styles */
  @media (max-width: 767.98px) {
    .card {
      width: 95% !important;
      margin: 0.5rem auto !important;
      border-radius: 30px !important;
    }
  }
</style>
<!-- Include the responsive table CSS -->
<link rel="stylesheet" href="/css/table-responsive.css">

<div style="margin-top:100px"></div><br>
<h4 class="text-center">All member profiles {{res.locals.user.name}}</h4><br>
{{#if profiles}}
<div class="wide-container">
  <div class="all-cases-card card card-body border-0">
    <div class="card-text" style="width: 100%;">
      <div class="table-responsive-wide">
        <table class="table table-stripted table-hover table-xl table-striped table-borderless profiles-table">
    <thead>
      <tr class="text-center">
        <th class="align-middle">Created At</th>
        <th class="align-middle">Avatar</th>
        <th class="align-middle">Name</th>
        <th class="align-middle">Role</th>
        <th class="align-middle">Badge</th>
      </tr>
    </thead>
    <tbody>
      {{#each profiles}} {{#unless isAdmin}}
      <tr>
        <td class="align-middle">{{StringDate}}</td>
        <td class="text-center align-middle">{{#if avatar.data}}<img
            src="data:image/{{avatar.contentType}}; base64, {{avatar.data}}" width="50" height="50" /> {{else}} -
          {{/if}}</td>
        <td class="text-center align-middle">{{name}}</td>
        <td class="text-center align-middle">{{#if isAdmin}} admin {{else}} user {{/if}}</td>
        <td class="text-center align-middle"><span class="badge bg-warning text-dark">{{badge}}</span></td>
      </tr>
      {{/unless}}{{/each}}
    </tbody>
        </table>
      </div>
    </div>
  </div><br>
</div>
{{else}}
<div class="text-center">
  <h2>No record found.</h2>
</div>
{{/if}}
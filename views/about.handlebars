<div class="about-page">
  <style>
    /* About page specific styles */
    .about-page {
      padding-top: 30px;
      padding-bottom: 50px;
    }

    .about-header {
      background-color: rgba(248, 237, 227, 0.7);
      padding: 40px 0;
      border-radius: 15px;
      margin-bottom: 40px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .about-section {
      background-color: rgba(248, 237, 227, 0.7);
      border-radius: 15px;
      padding: 30px;
      margin-bottom: 30px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .about-section h3 {
      color: #7D6E83;
      margin-bottom: 20px;
      font-weight: 600;
      border-bottom: 2px solid #D0B8A8;
      padding-bottom: 10px;
    }

    .about-section p {
      font-size: 1.1rem;
      line-height: 1.6;
    }

    .feature-box {
      text-align: center;
      padding: 20px;
      margin-bottom: 20px;
      transition: transform 0.3s ease;
      height: 100%;
    }

    .feature-box:hover {
      transform: translateY(-5px);
    }

    .feature-icon {
      font-size: 2.5rem;
      color: #7D6E83;
      margin-bottom: 15px;
    }

    .team-member {
      text-align: center;
      margin-bottom: 30px;
    }

    .team-member img {
      width: 150px;
      height: 150px;
      border-radius: 50%;
      object-fit: cover;
      margin-bottom: 15px;
      border: 5px solid #D0B8A8;
    }

    .contact-info {
      background-color: rgba(248, 237, 227, 0.7);
      border-radius: 15px;
      padding: 30px;
      margin-bottom: 30px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .contact-form {
      background-color: rgba(248, 237, 227, 0.7);
      border-radius: 15px;
      padding: 30px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .contact-form .form-control {
      border-radius: 10px;
      border: 1px solid #D0B8A8;
    }

    .contact-form .btn {
      background-color: #7D6E83;
      border: none;
      border-radius: 10px;
      padding: 10px 30px;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    .contact-form .btn:hover {
      background-color: #6a5d70;
      transform: translateY(-2px);
    }

    .map-container {
      border-radius: 15px;
      overflow: hidden;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      margin-bottom: 30px;
    }

    .info-item {
      margin-bottom: 15px;
      display: flex;
      align-items: center;
    }

    .info-icon {
      font-size: 1.5rem;
      color: #7D6E83;
      margin-right: 15px;
      width: 30px;
      text-align: center;
    }

    .mission-vision {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
    }

    .mission-box, .vision-box {
      flex: 1;
      min-width: 300px;
      background-color: rgba(255, 255, 255, 0.5);
      border-radius: 10px;
      padding: 20px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
    }

    .mission-box h4, .vision-box h4 {
      color: #7D6E83;
      margin-bottom: 15px;
      font-weight: 600;
    }

    .version-info {
      text-align: right;
      font-size: 0.8rem;
      color: #888;
      margin-top: 30px;
    }

    /* Responsive adjustments */
    @media (max-width: 767.98px) {
      .about-header {
        padding: 30px 15px;
      }

      .about-section {
        padding: 20px 15px;
      }

      .feature-box {
        margin-bottom: 30px;
      }

      .mission-box, .vision-box {
        min-width: 100%;
      }
    }
  </style>

  <!-- About Header Section -->
  <div class="container">
    <div class="about-header text-center">
      <h1>{{__ 'about.title'}}</h1>
      <p class="lead">{{__ 'about.description'}}</p>
    </div>

    <!-- Mission & Vision Section -->
    <div class="about-section">
      <h3 class="text-center">{{__ 'about.missionVision'}}</h3>
      <div class="mission-vision">
        <div class="mission-box">
          <h4><i class="fas fa-bullseye mr-2"></i> {{__ 'about.mission'}}</h4>
          <p>{{__ 'about.missionDesc'}}</p>
        </div>
        <div class="vision-box">
          <h4><i class="fas fa-eye mr-2"></i> {{__ 'about.vision'}}</h4>
          <p>{{__ 'about.visionDesc'}}</p>
        </div>
      </div>
    </div>

    <!-- How It Works Section -->
    <div class="about-section">
      <h3 class="text-center">{{__ 'about.howItWorks'}}</h3>
      <div class="row">
        <div class="col-md-4">
          <div class="feature-box">
            <div class="feature-icon">
              <i class="fas fa-question-circle"></i>
            </div>
            <h4>{{__ 'about.requestHelp'}}</h4>
            <p>{{__ 'about.requestHelpDesc'}}</p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="feature-box">
            <div class="feature-icon">
              <i class="fas fa-hands-helping"></i>
            </div>
            <h4>{{__ 'about.offerHelp'}}</h4>
            <p>{{__ 'about.offerHelpDesc'}}</p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="feature-box">
            <div class="feature-icon">
              <i class="fas fa-handshake"></i>
            </div>
            <h4>{{__ 'about.connect'}}</h4>
            <p>{{__ 'about.connectDesc'}}</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Contact Section -->
    <div class="row">
      <!-- Map and Contact Info -->
      <div class="col-lg-6">
        <div class="map-container">
          <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d12416.502183446015!2d114.17337408278598!3d22.298883531443117!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x340400ef62de4b4b%3A0xa793abe65f679d0e!2sCityu%20Scope%20Tsim%20Sha%20Tsui%20Campus!5e0!3m2!1szh-TW!2shk!4v1665754044189!5m2!1szh-TW!2shk"
            width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>

        <div class="contact-info">
          <h3 class="text-center">{{__ 'about.contactInfo'}}</h3>

          <div class="info-item">
            <div class="info-icon">
              <i class="fas fa-map-marker-alt"></i>
            </div>
            <div>
              <strong>{{__ 'about.address'}}:</strong><br>
              UG2, Chinachem (Golden) Plaza, 77 Mody Road, Tsim Sha Tsui East, Kowloon
            </div>
          </div>

          <div class="info-item">
            <div class="info-icon">
              <i class="fas fa-phone"></i>
            </div>
            <div>
              <strong>{{__ 'about.phone'}}:</strong> 3442 6359
            </div>
          </div>

          <div class="info-item">
            <div class="info-icon">
              <i class="fas fa-envelope"></i>
            </div>
            <div>
              <strong>{{__ 'about.email'}}:</strong> helpandoffer@gmail.com
            </div>
          </div>

          <div class="info-item">
            <div class="info-icon">
              <i class="fas fa-clock"></i>
            </div>
            <div>
              <strong>{{__ 'about.officeHours'}}:</strong><br>
              {{__ 'about.weekdays'}}: 9:00am - 6:00pm<br>
              <small>({{__ 'about.closed'}})</small>
            </div>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="col-lg-6">
        <div class="contact-form">
          <h3 class="text-center">{{__ 'about.contactUs'}}</h3>
          <p class="text-center mb-4">{{__ 'about.contactDesc'}}</p>

          <form action="/sendmsg" method="POST">
            <input type="hidden" name="_csrf" value="{{csrfToken}}">

            <div class="form-group">
              <label for="name">{{__ 'auth.name'}}</label>
              <input type="text" class="form-control" id="name" name="name" placeholder="{{__ 'auth.name'}}" required>
            </div>

            <div class="form-group">
              <label for="email">{{__ 'auth.email'}}</label>
              <input type="email" class="form-control" id="email" name="email" placeholder="{{__ 'auth.email'}}" required>
              <small class="form-text text-muted">{{__ 'about.emailPrivacy'}}</small>
            </div>

            <div class="form-group">
              <label for="subject">{{__ 'about.subject'}}</label>
              <input type="text" class="form-control" id="subject" name="subject" placeholder="{{__ 'about.subject'}}" required>
            </div>

            <div class="form-group">
              <label for="message">{{__ 'about.message'}}</label>
              <textarea class="form-control" id="message" name="message" rows="4" placeholder="{{__ 'about.messagePlaceholder'}}" required></textarea>
            </div>

            <div class="text-center">
              <button type="submit" class="btn text-white">{{__ 'about.send'}}</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <div class="version-info">
      <p>{{__ 'app.name'}} - {{__ 'about.version'}} 2.0</p>
    </div>
  </div>
</div>
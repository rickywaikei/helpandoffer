{{!-- Link to the error pages CSS --}}
<link rel="stylesheet" href="/css/error-pages.css">

<div class="page-header">
  <h1>{{__ 'errors.404'}}</h1>
  <p class="lead">{{__ 'errors.pageNotFoundDesc'}}</p>
</div>

<div class="content-section">
  <div class="error-container">
    <h1 class="error-code">404</h1>
    <p class="error-message">
      We're sorry, but the page you were looking for doesn't exist or has been moved.
      Please check the URL or use the button below to return to the home page.
    </p>

    <div class="error-image-container">
      <img src="/img/404.jpg" class="error-image" title="404" alt="Page not found" />
    </div>

    <div class="error-actions">
      <a href="/" class="btn-home">{{__ 'errors.goHome'}}</a>
    </div>

    <div class="error-footer">
      <p>If you believe this is an error, please contact our support team.</p>
    </div>
  </div>
</div>

<div class="version-info">
  <p>{{__ 'app.name'}} - {{__ 'about.version'}} 3.2</p>
</div>

<script>
  // Log the 404 error for analytics purposes
  console.log('404 error occurred at: ' + window.location.href);

  // Add a listener to the home button for tracking
  document.addEventListener('DOMContentLoaded', function() {
    const homeButton = document.querySelector('.btn-home');
    if (homeButton) {
      homeButton.addEventListener('click', function() {
        console.log('User clicked return to home from 404 page');
      });
    }
  });
</script>
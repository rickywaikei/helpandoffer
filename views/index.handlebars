                {{#if pagination.hasNextPage}}
                  <li class="page-item">
                    <a class="page-link" href="?page={{pagination.nextPage}}&itemsPerPage={{pagination.itemsPerPage}}{{#if searchTerm}}&searchInput={{searchTerm}}{{/if}}" aria-label="Next">

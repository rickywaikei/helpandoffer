  <!-- Custom script for mobile optimizations -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Function to position carousel controls at the center
      function positionCarouselControls() {
        const isMobile = window.innerWidth < 768;

        // Get carousel elements
        const carousel = document.getElementById('carouselExampleIndicators');
        const indicators = carousel.querySelector('.carousel-indicators');
        const prevControl = carousel.querySelector('.carousel-control-prev');
        const nextControl = carousel.querySelector('.carousel-control-next');

        // Position controls at the center of the picture
        if (indicators && prevControl && nextControl) {
          // Reset any previously set inline styles
          prevControl.style.top = '50%';
          nextControl.style.top = '50%';
          prevControl.style.transform = 'translateY(-50%)';
          nextControl.style.transform = 'translateY(-50%)';

          // Adjust positions based on screen size
          if (isMobile) {
            prevControl.style.left = '10px';
            nextControl.style.right = '10px';
          } else {
            prevControl.style.left = '15px';
            nextControl.style.right = '15px';
          }

          // Remove bottom positioning
          prevControl.style.bottom = '';
          nextControl.style.bottom = '';
        }
      }

      // Function to resize carousel captions based on image size
      function resizeCarouselCaptions() {
        const isMobile = window.innerWidth < 768;
        const carousel = document.getElementById('carouselExampleIndicators');
        const carouselItems = carousel.querySelectorAll('.carousel-item');

        carouselItems.forEach(item => {
          const img = item.querySelector('img');
          const caption = item.querySelector('.carousel-caption');

          if (img && caption) {
            // Get the image dimensions
            const imgHeight = img.clientHeight;
            const imgWidth = img.clientWidth;

            // Calculate the appropriate font size based on image dimensions
            // This creates a proportional relationship between image size and text size
            let headingSize, paragraphSize;

            if (isMobile) {
              // For mobile devices
              headingSize = Math.max(14, Math.min(18, imgHeight * 0.04));
              paragraphSize = Math.max(12, Math.min(16, imgHeight * 0.03));

              // Adjust caption width based on image width
              caption.style.maxWidth = Math.min(90, imgWidth * 0.8) + '%';
              caption.style.padding = Math.max(5, imgHeight * 0.01) + 'px';
            } else {
              // For desktop devices
              headingSize = Math.max(18, Math.min(24, imgHeight * 0.05));
              paragraphSize = Math.max(14, Math.min(18, imgHeight * 0.035));

              // Adjust caption width based on image width
              caption.style.maxWidth = Math.min(80, imgWidth * 0.6) + '%';
              caption.style.padding = Math.max(10, imgHeight * 0.02) + 'px';
            }

            // Apply the calculated font sizes to carousel caption
            const heading = caption.querySelector('h5');
            const paragraph = caption.querySelector('p');

            if (heading) heading.style.fontSize = headingSize + 'px';
            if (paragraph) paragraph.style.fontSize = paragraphSize + 'px';

            // Adjust bottom position based on image height
            caption.style.bottom = Math.max(10, imgHeight * 0.05) + 'px';
          }
        });
      }

      // Function to adjust padding based on viewport width
      function adjustPaddingBasedOnViewport() {
        const viewportWidth = window.innerWidth;
        const isMobile = viewportWidth < 768;

        // Adjust tab padding
        const tabLinks = document.querySelectorAll('.nav-tabs .nav-link');
        tabLinks.forEach(link => {
          // Calculate padding based on viewport width
          const horizontalPadding = Math.max(5, viewportWidth * 0.01);
          const verticalPadding = Math.max(3, viewportWidth * 0.005);
          link.style.padding = `${verticalPadding}px ${horizontalPadding}px`;
        });

        // Adjust table cell padding
        const tableCells = document.querySelectorAll('.table th, .table td');
        tableCells.forEach(cell => {
          const cellPadding = Math.max(4, viewportWidth * 0.005);
          cell.style.padding = `${cellPadding}px`;
        });

        // Adjust button padding
        const buttons = document.querySelectorAll('.btn');
        buttons.forEach(button => {
          const btnVerticalPadding = Math.max(4, viewportWidth * 0.004);
          const btnHorizontalPadding = Math.max(8, viewportWidth * 0.008);
          button.style.padding = `${btnVerticalPadding}px ${btnHorizontalPadding}px`;
        });
      }

      // Function to ensure card header and body widths match and center content
      function fixCardWidths() {
        const isMobile = window.innerWidth < 768;
        const isLandscape = window.matchMedia("(orientation: landscape)").matches;
        const container = document.querySelector('.container');
        const card = document.querySelector('.card');
        const cardHeader = document.querySelector('.card-header');
        const cardBody = document.querySelector('.card-body');

        if (card && cardHeader && cardBody) {
          // Center the card in the container
          if (isLandscape && window.innerWidth <= 915) {
            // Landscape mode on mobile
            container.style.margin = '0 auto';
            container.style.maxWidth = '800px';
            card.style.margin = '0.5rem auto';
            card.style.maxWidth = '800px';
            card.style.width = '100%';
          } else if (isMobile) {
            // Portrait mode on mobile
            container.style.margin = '0 auto';
            container.style.maxWidth = '100%';
            card.style.margin = '0.5rem auto';
            card.style.maxWidth = '600px';
            card.style.width = '95%';
          } else {
            // Desktop
            container.style.margin = '0 auto';
            card.style.margin = '0.5rem auto';
          }

          // Get the computed width of the card
          const cardWidth = card.offsetWidth;

          // Apply the same width to header and body
          cardHeader.style.width = cardWidth + 'px';
          cardBody.style.width = cardWidth + 'px';

          // Ensure no horizontal overflow
          cardHeader.style.maxWidth = '100%';
          cardBody.style.maxWidth = '100%';

          // Remove any padding that might cause width issues
          cardHeader.style.paddingLeft = '0';
          cardHeader.style.paddingRight = '0';
          cardBody.style.paddingLeft = '0';
          cardBody.style.paddingRight = '0';
        }
      }

      // Function to optimize carousel images and resize captions
      function optimizeCarouselImages() {
        const carousel = document.getElementById('carouselExampleIndicators');
        const images = carousel.querySelectorAll('.carousel-item img');

        images.forEach(img => {
          // When image loads, resize the caption
          img.addEventListener('load', function() {
            resizeCarouselCaptions();
          });

          // If image is already loaded, resize caption now
          if (img.complete) {
            resizeCarouselCaptions();
          }
        });
      }

      // Run on page load
      positionCarouselControls();
      fixCardWidths();
      optimizeCarouselImages();
      resizeCarouselCaptions();
      adjustPaddingBasedOnViewport(); // Add viewport-based padding adjustment

      // Run on window resize
      window.addEventListener('resize', function() {
        positionCarouselControls();
        fixCardWidths();
        resizeCarouselCaptions();
        adjustPaddingBasedOnViewport(); // Update padding based on new viewport size
      });

      // Listen for orientation changes
      window.addEventListener('orientationchange', function() {
        // Small delay to allow the browser to complete the orientation change
        setTimeout(function() {
          positionCarouselControls();
          fixCardWidths();
          resizeCarouselCaptions();
          adjustPaddingBasedOnViewport(); // Update padding after orientation change
        }, 200);
      });

      // Run after carousel slide
      const carousel = document.getElementById('carouselExampleIndicators');
      if (carousel) {
        carousel.addEventListener('slid.bs.carousel', function() {
          positionCarouselControls();
          resizeCarouselCaptions();
        });
      }

      // Also run when images are loaded or window is fully loaded
      window.addEventListener('load', function() {
        resizeCarouselCaptions();
        fixCardWidths(); // Ensure card is centered on initial load
        adjustPaddingBasedOnViewport(); // Ensure padding is properly set on load
      });
    });
  </script>

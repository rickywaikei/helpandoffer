<style>
  .card {
    background-color: rgb(248, 237, 227, 0.7) !important;
    font-size: 20px !important;
    font: #7D6E83 !important;
    border-radius: 50px 50px 50px 50px !important;
    overflow: hidden; /* Ensures content doesn't overflow */
  }

  /* Fix card header and body width mismatch on mobile */
  .card-header, .card-body {
    padding-left: 0 !important;
    padding-right: 0 !important;
    width: 100% !important;
  }

  /* Ensure consistent padding inside card components */
  .card-header .nav-tabs {
    width: 100%;
    padding: 0;
    margin: 0;
  }

  /* Mobile-specific card styles */
  @media (max-width: 767.98px) {
    .container {
      padding: 0 !important;
      margin: 0 auto !important;
      width: 100% !important;
      max-width: 100% !important;
    }

    .card {
      border-radius: 30px !important;
      margin: 0.5rem auto !important;
      width: 95% !important;
      max-width: 600px !important;
    }

    .card-header, .card-body {
      border-radius: inherit;
      width: 100% !important;
    }

    .tab-content {
      padding: 0.5rem;
    }
  }

  /* Landscape mode specific styles */
  @media (max-width: 915px) and (orientation: landscape) {
    .container {
      padding: 0 !important;
      margin: 0 auto !important;
      width: 90% !important;
      max-width: 800px !important;
    }

    .card {
      margin: 0.5rem auto !important;
      width: 100% !important;
      max-width: 800px !important;
    }
  }

  /* Body background is now handled by global.css */

  /* Responsive table styling */
  .table {
    background-color: #F8EDE3;
    background-color: rgb(248, 237, 227, 0.9);
    font-style: times;
    position: fixed sticky;
    font: #7D6E83 !important;
    transition: all 0.3s ease;
  }

  .table th {
    font-size: calc(13px + 0.4vw);
    transition: padding 0.3s ease;
  }

  .table td {
    font-size: calc(12px + 0.3vw);
    transition: padding 0.3s ease;
  }

  /* Card title and text transitions */
  .card-title {
    font-size: calc(16px + 0.5vw);
    transition: padding 0.3s ease;
  }

  .card-text {
    font-size: calc(14px + 0.3vw);
    transition: padding 0.3s ease;
  }

  .btn {
    font-size: calc(13px + 0.4vw);
    transition: padding 0.3s ease;
  }

  .badge {
    font-size: 0.9rem;
    padding: 0.4rem 0.6rem;
  }

  .search-form {
    margin-bottom: 20px;
  }

  /* Responsive typography based on viewport width */
  .responsive-text-xs {
    font-size: calc(10px + 0.5vw);
  }

  .responsive-text-sm {
    font-size: calc(12px + 0.5vw);
  }

  .responsive-text-md {
    font-size: calc(14px + 0.5vw);
  }

  .responsive-text-lg {
    font-size: calc(16px + 0.5vw);
  }

  /* Responsive nav-link styling */
  .nav-link {
    color: rgb(125, 110, 131) !important;
    transition: all 0.3s ease;
    font-size: calc(12px + 0.5vw);
    padding: 8px 12px;
  }

  /* Tab title transitions */
